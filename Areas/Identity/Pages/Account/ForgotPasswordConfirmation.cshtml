@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<style>
    @@keyframes fadeSlide {
        from

    {
        opacity: 0;
        transform: translateY(40px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    body {
        background: linear-gradient(135deg, #f0f4ff, #e8f0ff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        animation: fadeSlide 1s ease;
    }

    .confirmation-box {
        max-width: 500px;
        margin: 100px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(80, 112, 255, 0.15);
        text-align: center;
        animation: fadeSlide 1.2s ease;
    }

        .confirmation-box h1 {
            color: #5a60d1;
            font-size: 26px;
            margin-bottom: 20px;
            font-weight: 700;
            animation: fadeSlide 1.3s ease;
        }

        .confirmation-box p {
            font-size: 17px;
            color: #5f5f73;
            margin-bottom: 20px;
            animation: fadeSlide 1.4s ease;
        }

    .email-icon {
        font-size: 60px;
        color: #6a5acd;
        margin-bottom: 20px;
        animation: fadeSlide 1.5s ease;
    }

    .back-home-btn {
        background-color: #6a5acd;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin-top: 10px;
        box-shadow: 0 5px 12px rgba(106, 90, 205, 0.25);
    }

        .back-home-btn:hover {
            background-color: #5541c7;
            transform: scale(1.05);
            box-shadow: 0 8px 18px rgba(106, 90, 205, 0.3);
        }
</style>

<div class="confirmation-box">
    <div class="email-icon">📧</div>
    <h1>@ViewData["Title"]</h1>
    <p>Please check your email to reset your password.</p>

    @* <a class="back-home-btn" asp-controller="" asp-action="Index">Back to Home</a> *@
</div>
