@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    @@keyframes fadeSlideUp {
        from

    {
        opacity: 0;
        transform: translateY(40px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    body {
        background: linear-gradient(135deg, #e9f0ff, #f6f7fb);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        animation: fadeSlideUp 1s ease-out;
    }

    .forgot-container {
        max-width: 450px;
        margin: 80px auto;
        padding: 35px 40px;
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.1);
        border: 1px solid #dbe6ff;
        animation: fadeSlideUp 1.2s ease;
    }

        .forgot-container h1 {
            color: #5a60d1;
            text-align: center;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .forgot-container h2 {
            color: #8c90c2;
            text-align: center;
            font-size: 17px;
            margin-bottom: 25px;
            animation: fadeSlideUp 1.5s ease;
        }

    .form-floating label {
        color: #888;
        font-size: 14px;
        transition: color 0.3s ease;
    }

    .form-floating input:focus + label {
        color: #5a60d1;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #c9d9f2;
        padding: 14px;
        font-size: 15px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #5a60d1;
            box-shadow: 0 0 0 0.2rem rgba(90, 96, 209, 0.25);
        }

    .btn-reset {
        background-color: #6a5acd;
        color: white;
        font-weight: 600;
        border-radius: 10px;
        padding: 12px;
        margin-top: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(106, 90, 205, 0.3);
    }

        .btn-reset:hover {
            background-color: #5841c4;
            transform: scale(1.03);
            box-shadow: 0 6px 16px rgba(106, 90, 205, 0.4);
        }

    .note {
        font-size: 13px;
        text-align: center;
        color: #888;
        margin-top: 15px;
        animation: fadeSlideUp 1.6s ease;
    }

    .text-danger {
        font-size: 14px;
        animation: fadeSlideUp 1.7s ease;
    }
</style>

<div class="forgot-container">
    <h1>@ViewData["Title"]</h1>
    <h2>Enter your email to reset your password</h2>
    <hr />

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email" class="form-label">Email address</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="w-100 btn btn-reset">💌 Reset Password</button>
    </form>

    <p class="note">We’ll send you a link to reset your password safely and securely.</p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
