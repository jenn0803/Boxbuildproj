@page
@model BoxBuildproj.Areas.Identity.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = "Register Confirmation";
}

<style>
    .confirmation-container {
        max-width: 650px;
        margin: 60px auto;
        padding: 35px;
        background: #f7faff;
        border: 2px solid #d7e9f7;
        border-radius: 18px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .confirmation-container h2 {
            color: #6a5acd; /* Lavender */
            text-align: center;
            margin-bottom: 25px;
            font-weight: bold;
        }

        .confirmation-container p {
            font-size: 16.5px;
            color: #444;
            line-height: 1.6;
            margin-bottom: 16px;
        }

    .highlight {
        color: #2e8b57; /* Soft green */
        font-weight: 600;
    }

    .emoji {
        margin-right: 6px;
    }
</style>

<div class="confirmation-container">
    <h2>✅ Registration Successful!</h2>

    <p>
        <span class="emoji">📧</span>
        A confirmation link has been sent to your email:
        <span class="highlight">@Model.Email</span>.
    </p>

    <p>
        <span class="emoji">🔒</span>
        Please check your inbox and click the link to verify your account before logging in.
    </p>

    <p>
        <span class="emoji">❓</span>
        Didn’t get the email? Check your spam folder or try registering again.
    </p>
</div>
