@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<style>
    .resend-container {
        max-width: 500px;
        margin: auto;
        padding: 2rem;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.6s ease-in-out;
    }

    @@keyframes fadeIn {
        0%

    {
        opacity: 0;
        transform: translateY(20px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .resend-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

        .resend-header h1 {
            font-size: 2rem;
            font-weight: 600;
            color: #333;
        }

        .resend-header p {
            font-size: 1rem;
            color: #666;
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>

<div class="resend-container">
    <div class="resend-header">
        <h1>@ViewData["Title"]</h1>
        <p>Please enter your email to resend the confirmation link.</p>
    </div>

    <form method="post" novalidate>
        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

        <div class="form-floating mb-4">
            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email address</label>
            <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>

        <button type="submit" class="w-100 btn btn-lg btn-primary">
            <i class="bi bi-envelope-arrow-up"></i> Resend Confirmation
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
