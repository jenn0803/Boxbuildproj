@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #f4f4f4;
    }

    .login-card {
        max-width: 450px;
        width: 100%;
    }

    /* 🐼 Blue Panda Container */
    .panda-container {
        display: flex;
        justify-content: center;
        margin-bottom: 10px;
    }

    .panda {
        position: relative;
        width: 100px;
        height: 100px;
        background-color: #87CEEB; /* Light Blue Panda */
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease-in-out;
    }

    /* 🐼 Eyes */
    .eyes {
        display: flex;
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translateX(-50%);
        transition: opacity 0.3s ease-in-out;
    }

    .eye {
        width: 14px;
        height: 14px;
        background-color: black;
        border-radius: 50%;
        margin: 0 12px;
        transition: opacity 0.3s ease-in-out;
    }

    /* 🐼 Blush */
    .blush {
        position: absolute;
        top: 55%;
        width: 12px;
        height: 12px;
        background-color: pink;
        border-radius: 50%;
        opacity: 0.7;
    }

        .blush.left {
            left: 25%;
        }

        .blush.right {
            right: 25%;
        }

    /* 🐼 Hands */
    .hands {
        position: absolute;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: space-between;
        top: 50%;
        transform: translateY(-50%);
    }

    .hand {
        width: 30px;
        height: 60px;
        background-color: #87CEEB;
        position: absolute;
        top: 20px;
        border-radius: 10px;
        transition: transform 0.3s ease-in-out;
    }

    /* 🐼 Fingers */
    .fingers {
        position: absolute;
        bottom: -5px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 3px;
    }

    .finger {
        width: 6px;
        height: 12px;
        background-color: #87CEEB;
        border-radius: 5px;
    }

    .hand.left {
        left: -15px;
    }

    .hand.right {
        right: -15px;
    }

    /* 🐼 Hands Cover Eyes */
    .password-focus .hand.left {
        transform: translateX(30px) translateY(10px) rotate(30deg);
    }

    .password-focus .hand.right {
        transform: translateX(-30px) translateY(10px) rotate(-30deg);
    }

    .password-focus .eye {
        opacity: 0;
    }
</style>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 rounded login-card">
        <div class="card-body">
            <!-- 🐼 Panda Animation -->
            <div class="panda-container">
                <div class="panda" id="panda">
                    <div class="eyes">
                        <div class="eye"></div>
                        <div class="eye"></div>
                    </div>
                    <div class="blush left"></div>
                    <div class="blush right"></div>
                    <div class="hands">
                        <div class="hand left">
                            <div class="fingers">
                                <div class="finger"></div>
                                <div class="finger"></div>
                                <div class="finger"></div>
                                <div class="finger"></div>
                            </div>
                        </div>
                        <div class="hand right">
                            <div class="fingers">
                                <div class="finger"></div>
                                <div class="finger"></div>
                                <div class="finger"></div>
                                <div class="finger"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <h2 class="text-center mb-4 fw-bold">Welcome Back</h2>
            <p class="text-center text-muted">Sign in to continue</p>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" id="password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot Password?</a>
                </div>

                <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2">Log in</button>

                <div class="text-center mt-3">
                    <p class="mb-1">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-semibold">Sign up</a></p>
                    <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-muted">Resend Email Confirmation</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const passwordInput = document.getElementById("password");
    const panda = document.getElementById("panda");

    passwordInput.addEventListener("focus", () => {
        panda.classList.add("password-focus");
    });

    passwordInput.addEventListener("blur", () => {
        panda.classList.remove("password-focus");
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
