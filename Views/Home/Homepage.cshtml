<!-- JavaScript for Smooth Horizontal Scrolling -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Select the slider element
        const slider = document.querySelector(".slider");

        // Check if the slider exists
        if (!slider) {
            console.error("Slider element not found! Make sure you have a div with class 'slider'.");
            return;
        }

        // Function to scroll left
        function scrollLeft() {
            slider.scrollBy({ left: -250, behavior: "smooth" });
        }

        // Function to scroll right
        function scrollRight() {
            slider.scrollBy({ left: 250, behavior: "smooth" });
        }

        // Attach event listeners to buttons
        document.querySelector(".slide-btn.left").addEventListener("click", scrollLeft);
        document.querySelector(".slide-btn.right").addEventListener("click", scrollRight);
    });
</script>
