@{
    ViewData["Title"] = "Admin Dashboard";
    var username = User.Identity.IsAuthenticated ? User.Identity.Name : "Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        body {
            background: linear-gradient(135deg, #e0d4fd, #f8eaff);
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 220px;
            height: 100vh;
            background: rgba(170, 110, 255, 0.95);
            padding: 30px 15px;
            color: white;
            z-index: 999;
        }

            .sidebar h4 {
                margin-bottom: 40px;
                text-align: center;
                font-weight: 700;
            }

            .sidebar a {
                color: white;
                display: block;
                margin: 15px 0;
                font-size: 1rem;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background: rgba(255, 255, 255, 0.2);
                    border-radius: 6px;
                    padding-left: 10px;
                }

        .main-content {
            margin-left: 240px;
            padding: 40px 30px;
        }

        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            transition: 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
            }

            .card i {
                font-size: 2.5rem;
            }

        .card-title {
            margin-top: 15px;
            font-weight: 600;
        }

        .widget {
            background: white;
            padding: 20px;
            border-radius: 20px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
            transition: 0.3s;
        }

            .widget:hover {
                transform: translateY(-4px);
            }

        .btn-rounded {
            border-radius: 50px;
            padding: 10px 20px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4>Admin Panel</h4>
        <a href="@Url.Action("Index", "Admin")"><i class="fas fa-home me-2"></i>Dashboard</a>
        <a href="@Url.Action("Userdisplay", "Admin")"><i class="fas fa-users me-2"></i>Manage Users</a>
        <!-- Removed Categories Link -->
        <a href="@Url.Action("Index", "Products", new { area = "Admin" })"><i class="fas fa-box me-2"></i>Manage Products</a>
        <a href="@Url.Action("MailInbox", "Admin")"><i class="fas fa-envelope me-2"></i>Mail Inbox</a>
        <a href="@Url.Action("Profile", "Admin")"><i class="fas fa-user-circle me-2"></i>Profile</a>
        <form asp-controller="Manage" asp-action="Logout" method="post" class="mt-4">
            <button type="submit" class="btn btn-light text-dark btn-sm w-100"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
        </form>
    </div>

    <!-- Main Dashboard Content -->
    <div class="main-content">
        <h2 class="mb-4 fw-bold text-dark">Welcome, @username!</h2>

        <div class="row mb-5">
            <!-- Manage Products -->
            <div class="col-md-6 mb-4">
                <div class="card text-center p-4">
                    <i class="fas fa-box text-success"></i>
                    <h5 class="card-title">Manage Products</h5>
                    <a href="@Url.Action("Index", "Products", new { area = "Admin" })" class="btn btn-success btn-rounded w-100">Go</a>
                </div>
            </div>

            <!-- Manage Users -->
            <div class="col-md-6 mb-4">
                <div class="card text-center p-4">
                    <i class="fas fa-users text-info"></i>
                    <h5 class="card-title">Manage Users</h5>
                    <a href="@Url.Action("Userdisplay", "Admin")" class="btn btn-info btn-rounded w-100 text-white">Go</a>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Calendar Widget -->
            <div class="col-md-6 mb-4">
                <div class="widget">
                    <h5 class="fw-bold">Calendar</h5>
                    <input type="date" class="form-control mt-3" />
                </div>
            </div>

            <!-- Analytics Widget -->
            <div class="col-md-6 mb-4">
                <div class="widget">
                    <h5 class="fw-bold">Weekly Summary</h5>
                    <ul class="list-group list-group-flush mt-3">
                        <li class="list-group-item">New Users: <strong>125</strong></li>
                        <li class="list-group-item">New Products: <strong>32</strong></li>
                        <li class="list-group-item">Total Orders: <strong>54</strong></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
