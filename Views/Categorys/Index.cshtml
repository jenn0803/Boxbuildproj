@model IEnumerable<BoxBuildproj.Models.Categorytbl>
@{
    ViewData["Title"] = "Category List";
}

<h2>Categories</h2>
<a asp-action="Create" class="btn btn-primary">Add New Category</a>
<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.CategoryID" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.CategoryID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
