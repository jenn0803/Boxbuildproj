@model IEnumerable<BoxBuildproj.Models.Wishlist>
@{
    ViewData["Title"] = "Your Wishlist";
}
<html>
    <head>
        <style>
        .wishlist-card {
            transition: all 0.3s ease-in-out;
            border-radius: 20px;
            overflow: hidden;
        }

            .wishlist-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 16px 32px rgba(0, 0, 0, 0.1);
            }

        .wishlist-image-wrapper {
            position: relative;
            overflow: hidden;
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }

            .wishlist-image-wrapper img {
                width: 100%;
                height: 220px;
                object-fit: cover;
                transition: transform 0.3s ease;
            }

        .wishlist-card:hover .wishlist-image-wrapper img {
            transform: scale(1.05);
        }

        .wishlist-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.4);
            opacity: 0;
            transition: opacity 0.3s ease;
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }

        .wishlist-card:hover .wishlist-overlay {
            opacity: 1;
        }


        </style>
    </head>
    <body>


    <header style="background: rgba(255, 255, 255, 0.85); backdrop-filter: blur(10px); box-shadow: 0 8px 24px rgba(0,0,0,0.1);">
        <div class="container py-3">
            <nav class="navbar navbar-expand-lg navbar-light">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="User" asp-action="Home">
                    <img src="~/pillowmart-master/img/logobox.png" asp-append-version="true" alt="logo" style="height: 45px;" />
                </a>

                <!-- Toggler for mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav items -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav align-items-center ms-auto" style="gap: 30px; font-weight: 500; font-size: 16px;">
                        <li class="nav-item">
                            <a class="nav-link link-animate" asp-controller="User" asp-action="Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-animate" asp-controller="User" asp-action="About">About</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle link-animate" href="#" role="button" data-bs-toggle="dropdown">Product</a>
                            <div class="dropdown-menu dropdown-animated shadow rounded">
                                <a class="dropdown-item" asp-controller="UserProducts" asp-action="Product_list">Product List</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle link-animate" href="#" role="button" data-bs-toggle="dropdown">Pages</a>
                            <div class="dropdown-menu dropdown-animated shadow rounded">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <span class="dropdown-item text-muted">Hi, @User.Identity.Name</span>
                                    <a class="dropdown-item" asp-controller="User" asp-action="Checkout">Checkout</a>
                                    <a class="dropdown-item" asp-controller="User" asp-action="Cart">Cart</a>
                                    <a class="dropdown-item" asp-controller="Order" asp-action="MyOrders">My Orders</a>
                                    <div class="dropdown-divider"></div>
                                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="px-3">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger w-100 mt-1">Logout</button>
                                    </form>
                                }
                                else
                                {
                                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Login</a>
                                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Register</a>
                                }
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle link-animate" href="#" role="button" data-bs-toggle="dropdown">Blog</a>
                            <div class="dropdown-menu dropdown-animated shadow rounded">
                                <a class="dropdown-item" asp-controller="Blog" asp-action="Index">Blog</a>
                                <a class="dropdown-item" asp-controller="Blog" asp-action="SingleBlog">Single Blog</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link link-animate" asp-controller="User" asp-action="Contact">Contact</a>
                        </li>

                        <!-- Icons -->

                        <li class="nav-item ms-2">
                            <a asp-controller="Cart" asp-action="Index" class="text-dark icon-animate" style="font-size: 20px;">
                                <i class="flaticon-shopping-cart-black-shape"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>




    <h2 class="mb-5 text-center" style="font-weight: bold; font-size: 2rem;">
        <i class="fas fa-heart text-danger"></i> Your Wishlist
    </h2>

    <div class="container">
        <div class="row g-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card wishlist-card shadow-sm border-0 rounded-4 h-100">
                        @if (!string.IsNullOrEmpty(item.Product.ImagePath))
                        {
                            <div class="wishlist-image-wrapper position-relative">
                                <img src="@item.Product.ImagePath" class="card-img-top rounded-top-4" alt="@item.Product.ProductName" />
                                <div class="wishlist-overlay d-flex justify-content-center align-items-center">
                                    <a asp-controller="Wishlist" asp-action="RemoveFromWishlist" asp-route-id="@item.WishlistId" class="btn btn-danger btn-sm rounded-pill px-3">Remove</a>
                                </div>
                            </div>
                        }

                        <div class="card-body text-center d-flex flex-column justify-content-between">
                            <h5 class="card-title">@item.Product.ProductName</h5>
                            <p class="card-text text-muted small">@item.Product.Description?.Substring(0, Math.Min(80, item.Product.Description.Length))...</p>

                            <a asp-controller="UserProducts" asp-action="Details" asp-route-id="@item.Product.ProductID" class="btn btn-outline-primary btn-sm mt-2 rounded-pill">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!--::footer_part start::-->
    <footer class="footer_part bg-light text-black pt-5">
        <div class="container">
            <div class="row justify-content-between align-items-start">
                <!-- Brand and Social Icons -->
                <div class="col-md-4 mb-4">
                    <div class="footer_logo mb-3">
                        <a asp-controller="User" asp-action="Home">
                            <img src="~/pillowmart-master/img/logobox.png" alt="Logo" style="height: 60px;">
                        </a>
                    </div>
                    <p class="small">
                        Your one-stop destination for premium packaging solutions, where quality meets creativity.
                    </p>
                    <div class="social_icon mt-3">
                        <a href="#" class="text-black me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-black me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-black me-3"><i class="fab fa-google-plus-g"></i></a>
                        <a href="#" class="text-black"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <!-- Useful Links -->
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-black-50 d-block mb-2" asp-controller="User" asp-action="Home">Home</a></li>
                        <li><a class="text-black-50 d-block mb-2" asp-controller="User" asp-action="About">About</a></li>
                        <li><a class="text-black-50 d-block mb-2" asp-controller="UserProducts" asp-action="Product_list">Product List</a></li>
                        <li><a class="text-black-50 d-block mb-2" href="#">Blog</a></li>
                        <li><a class="text-black-50 d-block" asp-controller="User" asp-action="Contact">Contact</a></li>
                    </ul>
                </div>

                <!-- Help Section -->
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase mb-3">Help & Support</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-black-50 d-block mb-2" href="#">Terms & Conditions</a></li>
                        <li><a class="text-black-50 d-block mb-2" href="#">Privacy Policy</a></li>
                        <li><a class="text-black-50 d-block" href="#">FAQs</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Copyright -->
        <div class="text-center mt-4 border-top pt-3 pb-2" style="border-color: rgba(245, 155, 255, 0.7);">
            <p class="mb-0 small text-black-50">
                &copy; <script>document.write(new Date().getFullYear());</script> All rights reserved | Made with
                <i class="fas fa-heart text-danger"></i> by
                <a href="https://colorlib.com" target="_blank" class="text-white-50 text-decoration-underline">BoxBuild Team</a>
            </p>
        </div>
    </footer>

</body>
</html>