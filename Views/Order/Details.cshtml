@model BoxBuildproj.Models.ViewModels.OrderDetailsViewModel
@{
    ViewData["Title"] = "Order Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .order-wrapper {
        border-radius: 16px;
        padding: 30px;
        background: #fff;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }

    .product-img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 12px;
        margin-right: 15px;
    }

    .status-badge {
        padding: 0.4rem 0.75rem;
        border-radius: 12px;
        font-weight: 500;
        color: white;
    }

    .status-pending {
        background: #ffc107;
    }

    .status-completed {
        background: #28a745;
    }

    .status-cancelled {
        background: #dc3545;
    }

    .summary-box {
        background-color: #f1f1f1;
        padding: 1rem;
        border-radius: 10px;
        font-size: 1.2rem;
        text-align: right;
    }
</style>

<div class="container my-5">
    <div class="order-wrapper">
        <h3 class="text-primary"><i class="bi bi-receipt me-2"></i>Order #@Model.Order.OrderId</h3>
        <p><strong>Date:</strong> @Model.Order.OrderDate.ToString("dd MMM yyyy")</p>
        <p>
            <strong>Status:</strong>
            <span class="status-badge @(Model.Order.OrderStatus switch {
                "Pending" => "status-pending",
                "Completed" => "status-completed",
                "Cancelled" => "status-cancelled",
                _ => "bg-secondary"
            })">
                @Model.Order.OrderStatus
            </span>
        </p>

        <hr />

        <h5 class="mb-3"><i class="bi bi-box-seam me-2"></i>Items</h5>
        @foreach (var item in Model.Items)
        {
            <div class="d-flex align-items-center mb-3">
                <img src="@item.ProductImage" alt="@item.ProductName" class="product-img" />
                <div>
                    <h6 class="mb-1">@item.ProductName</h6>
                    <p class="mb-0">₹@item.Price.ToString("0.00") x @item.Quantity = ₹@(item.Price * item.Quantity).ToString("0.00")</p>
                </div>
            </div>
        }

        <div class="summary-box mt-4">
            <strong>Total: ₹@Model.Order.TotalPrice.ToString("0.00")</strong>
        </div>

        <div class="text-center mt-4">
            <a class="btn btn-outline-primary" href="/Order/MyOrders"><i class="bi bi-arrow-left me-1"></i>Back to My Orders</a>
        </div>
    </div>
</div>
