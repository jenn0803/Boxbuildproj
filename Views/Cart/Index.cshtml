    @{
        decimal cartSubtotal = 0;

        foreach (var item in Model)
        {
            var offer = item.Product.ProductOffer?.FirstOrDefault()?.Offer;
            decimal originalPrice = item.Product.Price;
            decimal price = originalPrice;

            if (offer != null && offer.StartDate <= DateTime.Now && offer.EndDate >= DateTime.Now)
            {
                var discountAmount = (offer.DiscountPercentage / 100m) * price;
                price -= discountAmount;
            }

            cartSubtotal += price * item.Quantity;
        }
    }

    <section class="cart_area section_padding">
        <div class="container">
            <div class="cart_inner">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var offer = item.Product.ProductOffer?.FirstOrDefault()?.Offer;
                                decimal originalPrice = item.Product.Price;
                                decimal price = originalPrice;

                                if (offer != null && offer.StartDate <= DateTime.Now && offer.EndDate >= DateTime.Now)
                                {
                                    var discountAmount = (offer.DiscountPercentage / 100m) * price;
                                    price -= discountAmount;
                                }

                                <tr>
                                    <td>
                                        <div class="media">
                                            <div class="d-flex">
                                                <img src="@item.Product.ImagePath" alt="" width="100" height="100" />
                                            </div>
                                            <div class="media-body">
                                                <p><strong>@item.Product.ProductName</strong></p>

                                                @if (item.Product.ProductOffer != null && item.Product.ProductOffer.Any())
                                                {
                                                    <p style="font-size: small; color: green;">
                                                        Offer:
                                                        @string.Join(", ", item.Product.ProductOffer.Select(po => $"{po.Offer.Title} ({po.Offer.DiscountPercentage}%)"))
                                                    </p>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (offer != null && offer.StartDate <= DateTime.Now && offer.EndDate >= DateTime.Now)
                                        {
                                            <div>
                                                <span style="text-decoration: line-through; color: red;">
                                                    $@originalPrice
                                                </span><br />
                                                <span style="color: green; font-weight: bold;">
                                                    $@price
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <h5>$@price</h5>
                                        }
                                    </td>
                                    <td>
                                        <div class="product_count">
                                            <form asp-action="UpdateQuantity" asp-controller="Cart" method="post">
                                                <input type="hidden" name="cartId" value="@item.CartId" />
                                                <span class="input-number-decrement" onclick="decreaseQuantity(@item.CartId)"> <i class="ti-minus"></i></span>
                                                <input class="input-number" type="text" name="quantity" value="@item.Quantity" min="1" max="10">
                                                <span class="input-number-increment" onclick="increaseQuantity(@item.CartId)"> <i class="ti-plus"></i></span>
                                                <button type="submit" class="btn btn-sm btn-primary">Update</button>
                                            </form>
                                        </div>
                                    </td>
                                    <td>
                                        <h5>$@(price * item.Quantity)</h5>
                                    </td>
                                    <td>
                                        <form asp-action="RemoveFromCart" asp-controller="Cart" method="post">
                                            <input type="hidden" name="cartId" value="@item.CartId" />
                                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                        </form>
                                    </td>
                                </tr>
                            }

                            <tr>
                                <td></td>
                                <td></td>
                                <td><h5>Subtotal</h5></td>
                                <td><h5>$@cartSubtotal</h5></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="checkout_btn_inner float-right">
                        <a class="btn_1" asp-controller="UserProducts" asp-action="Product_list">Continue Shopping</a>
                        <a class="btn_1" asp-controller="Checkout" asp-action="Index">Proceed to checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        function increaseQuantity(cartId) {
            const input = document.querySelector(`input[name="cartId"][value="${cartId}"]`).closest('form').querySelector('input[name="quantity"]');
            if (input) {
                input.value = parseInt(input.value) + 1;
            }
        }

        function decreaseQuantity(cartId) {
            const input = document.querySelector(`input[name="cartId"][value="${cartId}"]`).closest('form').querySelector('input[name="quantity"]');
            if (input && parseInt(input.value) > 1) {
                input.value = parseInt(input.value) - 1;
            }
        }
    </script>


