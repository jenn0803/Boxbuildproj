    <!-- Horizontal Filter Bar -->
    <div class="container mb-4">
        <form method="get" asp-action="Product_list" asp-controller="UserProducts">
            <div class="row g-3 align-items-end bg-white p-3 shadow rounded-4">

                <!-- Search Field -->
                <div class="col-md-3">
                    <label class="form-label fw-semibold text-muted">Search</label>
                    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search products..." class="form-control shadow-sm" />
                </div>

                <!-- Category Dropdown -->
                <div class="col-md-3">
                    <label class="form-label fw-semibold text-muted">Category</label>
                    <select name="category" class="form-select shadow-sm">
                        <option value="">All Categories</option>
                        @foreach (var cat in (ViewBag.Categories as List<string>) ?? new List<string>())
                        {
                            <option value="@cat" selected="@(ViewBag.SelectedCategory == cat ? "selected" : null)">
                                @cat
                            </option>
                        }
                    </select>
                </div>

                <!-- Min Price -->
                <div class="col-md-2">
                    <label class="form-label fw-semibold text-muted">Min Price</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text">₹</span>
                        <input type="number" name="minPrice" value="@ViewBag.MinPrice" class="form-control" placeholder="Min" />
                    </div>
                </div>

                <!-- Max Price -->
                <div class="col-md-2">
                    <label class="form-label fw-semibold text-muted">Max Price</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text">₹</span>
                        <input type="number" name="maxPrice" value="@ViewBag.MaxPrice" class="form-control" placeholder="Max" />
                    </div>
                </div>

                <!-- Apply Button -->
                <div class="col-md-2 text-end">
                    <button type="submit" class="btn btn-primary w-100 shadow-sm fw-semibold rounded-pill mt-md-0 mt-3">
                        Apply
                    </button>
                </div>

            </div>
        </form>
    </div>




                <!-- Product List Section -->
                <section class="single_product_list section_padding">
                    <div class="container">
                        <div class="row">
                            @foreach (var product in Model)
                            {
                                var cartItem = userId != null ? _context.Carts.FirstOrDefault(c => c.UserId == userId && c.ProductId == product.ProductID) : null;

                                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                                    <div class="card product_card">
                                        <!-- Product Image -->
                                        <div class="product_img_wrapper">
                                            <img src="@product.ImagePath" class="card-img-top product_img" alt="@product.ProductName">
                                            <img src="~/pillowmart-master/img/product_overlay.png" alt="#" class="product_overlay">
                                        </div>

                                        <!-- Product Details -->
                                        <div class="card-body text-center">
                                            <h6 class="text-muted">Starting from ₹@product.Price</h6>
                                            <h5>
                                                <a asp-action="Details" asp-controller="UserProducts" asp-route-id="@product.ProductID" class="product_link">
                                                    @product.ProductName
                                                </a>
                                            </h5>
                                            <p class="product_desc">@product.Description</p>

                                            <!-- Add to Cart Button -->
                                            @if (cartItem == null)
                                            {
                                                <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                                    <input type="hidden" name="productId" value="@product.ProductID" />
                                                    <label>Quantity:</label>
                                                    <select name="quantity" class="form-select d-inline w-auto">
                                                        @for (int i = 1; i <= 10; i++)
                                                        {
                                                            <option value="@i">@i</option>
                                                        }
                                                    </select>
                                                    <button type="submit" class="btn btn-primary btn-sm mt-2">
                                                        <i class="fas fa-cart-plus"></i> Add to Cart
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <a asp-action="Index" asp-controller="Cart" class="btn btn-success btn-sm mt-2">
                                                    <i class="fas fa-shopping-cart"></i> Go to Cart
                                                </a>
                                            }

                                            <!-- Add to Wishlist Button -->
                                            <a asp-action="AddToWishlist" asp-controller="Wishlist" asp-route-productId="@product.ProductID" class="btn btn-danger btn-sm mt-2">
                                                <i class="fas fa-heart"></i> Wishlist
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </section>


