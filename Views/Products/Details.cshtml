@model BoxBuildproj.Models.Productstbl

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="Product Image" class="img-fluid" style="max-height:400px; object-fit:cover;" />
            }
            else
            {
                <img src="/images/default.png" alt="No Image" class="img-fluid" style="max-height:400px; object-fit:cover;" />
            }
        </div>
        <div class="col-md-6">
            <h2>@Model.ProductName</h2>
            <p class="lead">@Model.Description</p>
            <h4 class="text-success">Price: ₹@Model.Price</h4>
            <p><strong>Stock Quantity:</strong> @Model.StockQuantity</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Created At:</strong> @Model.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")</p>
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.ProductID" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
