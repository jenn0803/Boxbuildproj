<div class="container mt-5">
    <div class="row g-4 align-items-center">
        <!-- Image Section -->
            <div class="col-md-6 text-center">
                <div class="cute-image-container">
                    <img src="@(!string.IsNullOrEmpty(Model.ImagePath) ? Model.ImagePath : "/images/default.png")"
                         alt="Product Image"
                         class="cute-product-image" />
                </div>
            </div>

            <!-- Details Section -->
            <div class="col-md-6">
                <div class="glass-card p-4 rounded-4 shadow-lg animate-fadein">
                    <h2 class="fw-bold text-gradient mb-3">@Model.ProductName</h2>
                    <p class="text-muted fst-italic mb-4">@Model.Description</p>

                    <div class="mb-3 d-flex align-items-center gap-2">
                        <i class="fas fa-tag text-success fa-lg"></i>
                        <h4 class="m-0 text-success fw-bold">₹@Model.Price</h4>
                    </div>

                    <div class="mb-2 d-flex align-items-center gap-2">
                        <i class="fas fa-boxes text-primary"></i>
                        <span><strong>Stock:</strong> @Model.StockQuantity</span>
                    </div>

                    <div class="mb-2 d-flex align-items-center gap-2">
                        <i class="fas fa-layer-group text-warning"></i>
                        <span><strong>Category:</strong> @Model.Category</span>
                    </div>

                    <div class="mb-4 d-flex align-items-center gap-2">
                        <i class="fas fa-calendar-alt text-danger"></i>
                        <span><strong>Added on:</strong> @Model.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")</span>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-3 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.ProductID" class="btn btn-primary px-4 rounded-pill shadow-sm">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary px-4 rounded-pill">
                            <i class="fas fa-arrow-left me-2"></i>Back
                        </a>
                    </div>
                </div>
            </div>



</body>
