                            }

                            <!-- Product Image -->
                            <div class="product_img_wrapper">
                                <img src="@product.ImagePath" class="card-img-top product_img" alt="@product.ProductName">
                                <img src="~/pillowmart-master/img/product_overlay.png" alt="#" class="product_overlay">
                            </div>

                            <!-- Product Details -->
                            <div class="card-body text-center">

                                <!-- Price Section -->
                                <h6 class="text-muted">
                                    @if (product.DiscountedPrice < product.Price)
                                    {
                                        <del>₹@product.Price</del>
                                        <span class="text-danger fw-bold ms-2">₹@product.DiscountedPrice</span>
                                    }
                                    else
                                    {
                                        <span>₹@product.Price</span>
                                    }
                                </h6>

                                <h5>
                                    <a asp-action="Details" asp-controller="UserProducts" asp-route-id="@product.ProductID" class="product_link">
                                        @product.ProductName
                                    </a>
                                </h5>
                                <p class="product_desc">@product.Description</p>

                                <!-- Add to Cart -->
                                @if (cartItem == null)
                                {
                                    <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                        <input type="hidden" name="productId" value="@product.ProductID" />
                                        <label>Quantity:</label>
                                        <select name="quantity" class="form-select d-inline w-auto">
                                            @for (int i = 1; i <= 10; i++)
                                            {
                                                <option value="@i">@i</option>
                                            }
                                        </select>
                                        <button type="submit" class="btn btn-primary btn-sm mt-2">
                                            <i class="fas fa-cart-plus"></i> Add to Cart
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <a asp-action="Index" asp-controller="Cart" class="btn btn-success btn-sm mt-2">
                                        <i class="fas fa-shopping-cart"></i> Go to Cart
                                    </a>
                                }

                                <!-- Wishlist -->
                                <a asp-action="AddToWishlist" asp-controller="Wishlist" asp-route-productId="@product.ProductID" class="btn btn-danger btn-sm mt-2">
                                    <i class="fas fa-heart"></i> Wishlist
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
