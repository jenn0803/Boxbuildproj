    <!-- Sidebar Section -->
    <!-- Horizontal Filter Bar -->
    <div class="container my-4">
        <form method="get" asp-action="Product_list" asp-controller="UserProducts" class="row g-2 align-items-end">
            <!-- Search -->
            <div class="col-md-4">
                <input type="text" name="search" value="@ViewBag.Search" class="form-control shadow-sm" placeholder="🔍 Search keyword...">
            </div>

            <!-- Category -->
            <div class="col-md-3">
                <select name="category" class="form-select shadow-sm">
                    <option value="">All Categories</option>
                    @foreach (var cat in (ViewBag.Categories as List<string>) ?? new List<string>())
                    {
                        <option value="@cat" selected="@(ViewBag.SelectedCategory == cat ? "selected" : null)">
                            @cat
                        </option>
                    }
                </select>
            </div>

            <!-- Min Price -->
            <div class="col-md-2">
                <input type="number" name="minPrice" value="@ViewBag.MinPrice" class="form-control shadow-sm" placeholder="Min ₹">
            </div>

            <!-- Max Price -->
            <div class="col-md-2">
                <input type="number" name="maxPrice" value="@ViewBag.MaxPrice" class="form-control shadow-sm" placeholder="Max ₹">
            </div>

            <!-- Submit -->
            <div class="col-md-1 text-end">
                <button type="submit" class="btn btn-primary w-100 shadow-sm">Go</button>
            </div>
        </form>
    </div>


