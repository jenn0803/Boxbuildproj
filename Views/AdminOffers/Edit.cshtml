@model BoxBuildproj.Models.Offer
@{
    ViewData["Title"] = "Edit Offer";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - Create Offer</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }

        body {
            margin: 0;
            padding-left: 230px; /* sidebar width */
            background: linear-gradient(135deg, #f8f9ff, #eae6ff);
            min-height: 100vh;
            color: #3a3a3a;
            padding-top:90px;
        }

        .header {
            height: 70px;
            background: linear-gradient(to right, #7f6cff, #c78bff);
            color: white;
            padding: 0 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
        }

            .header h3 {
                margin: 0;
                font-weight: 600;
            }

        .profile-dropdown {
            display: flex;
            align-items: center;
        }

            .profile-dropdown i {
                font-size: 1.5rem;
                margin-right: 10px;
            }

        .sidebar {
            position: fixed;
            top: 70px;
            left: 0;
            height: 100%;
            width: 230px;
            background: #6c4cf1;
            color: white;
            padding-top: 30px;
            z-index: 999;
            overflow-y: auto;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 12px 25px;
                font-size: 1rem;
                transition: 0.3s;
                border-left: 4px solid transparent;
            }

                .sidebar a:hover {
                    background-color: #8265ff;
                    border-left: 4px solid #fff;
                }

        .main-content {
            padding: 110px 40px 40px 40px; /* header + sidebar */
            max-width: 700px;
            margin: auto;
        }

        /* Card style around the form */
        .form-card {
            background: white;
            border-radius: 25px;
            padding: 40px 50px;
            box-shadow: 0 15px 40px rgba(111, 99, 255, 0.25);
            transition: 0.3s ease;
        }

            .form-card:hover {
                box-shadow: 0 20px 60px rgba(111, 99, 255, 0.4);
            }

        h2.form-title {
            font-weight: 700;
            margin-bottom: 25px;
            color: #6c4cf1;
            text-align: center;
            letter-spacing: 1.2px;
        }

        label {
            font-weight: 600;
            color: #4e4e4e;
        }

        input.form-control {
            border-radius: 15px;
            padding: 12px 20px;
            border: 1.8px solid #d1d1d1;
            transition: border-color 0.3s ease;
            font-size: 1rem;
        }

            input.form-control:focus {
                border-color: #6c4cf1;
                box-shadow: 0 0 8px #a89eff88;
                outline: none;
            }

        button.btn-success {
            background: linear-gradient(45deg, #7f6cff, #c78bff);
            border: none;
            font-weight: 600;
            font-size: 1.1rem;
            padding: 12px 35px;
            border-radius: 30px;
            transition: background 0.4s ease;
            display: block;
            margin: 30px auto 0 auto;
            width: 100%;
            max-width: 300px;
        }

            button.btn-success:hover {
                background: linear-gradient(45deg, #6b54e6, #b475ff);
            }

        /* Validation message */
        .text-danger {
            font-size: 0.9rem;
            margin-top: 5px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            body

        {
            padding-left: 0;
        }

        .sidebar {
            width: 100%;
            height: auto;
            position: relative;
            padding-top: 10px;
        }

        .main-content {
            padding: 120px 20px 30px 20px;
            max-width: 100%;
        }

        .form-card {
            padding: 30px 20px;
            border-radius: 15px;
        }

        }

        .card {
            max-width: 600px;
            margin: auto;
            border: none;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.1);
            background: #ffffff;
        }

        .card-header {
            background: linear-gradient(90deg, #7f6cff, #c78bff);
            color: white;
            border-radius: 16px 16px 0 0;
            padding: 1rem 1.5rem;
            text-align: center;
        }

        .form-label {
            font-weight: 600;
            color: #555;
        }

        .form-control, .btn {
            border-radius: 50px;
        }

        .btn-save {
            background: #7f6cff;
            color: white;
            padding: 0.6rem 2rem;
        }

            .btn-save:hover {
                background: #6953d8;
            }
    </style>
</head>
<body>

    <!-- Header -->
    <div class="header">
        <h3>Admin Dashboard</h3>
        <div class="profile-dropdown">
            <i class="fas fa-user-circle"></i>
            @* <span>@username</span> *@
        </div>
    </div>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="@Url.Action("Index", "Admin")"><i class="fas fa-home me-2"></i>Dashboard</a>
        <a href="@Url.Action("Userdisplay", "Admin")"><i class="fas fa-users me-2"></i>Manage Users</a>
        <a href="@Url.Action("Index", "Products", new { area = "Admin" })"><i class="fas fa-box me-2"></i>Manage Products</a>
        <a href="@Url.Action("Index", "AdminOrder")"><i class="fas fa-shopping-cart me-2"></i>Orders</a>
        <a href="@Url.Action("MailInbox", "Admin")"><i class="fas fa-envelope me-2"></i>Inbox</a>
        <a href="@Url.Action("Profile", "Admin")"><i class="fas fa-user me-2"></i>Profile</a>
        <a asp-controller="AdminOffers" asp-action="Index" class="nav-link">Manage Offers</a>
        <a asp-controller="AdminOffers" asp-action="AssignOffer" class="nav-link">Assign Offers to Products</a>

        <form asp-controller="Manage" asp-action="Logout" method="post" class="text-center mt-4">
            <button class="btn-logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
        </form>
    </div>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />


<div class="card">
    <div class="card-header">
        <h3>Edit Offer</h3>
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="OfferId" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Offer Title</label>
                <input asp-for="Title" class="form-control" placeholder="e.g. Summer Sale" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DiscountPercentage" class="form-label">Discount (%)</label>
                <input asp-for="DiscountPercentage" type="number" class="form-control" min="1" max="100" />
                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="StartDate" class="form-label">Start Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EndDate" class="form-label">End Date</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-save">💾 Save Changes</button>
                <a asp-action="Index" class="btn btn-link ms-3">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</body>
</html>