@model IEnumerable<Offer>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }

        body {
            margin: 0;
            padding-left: 230px; /* Avoid content under sidebar */
            background: linear-gradient(135deg, #f8f9ff, #eae6ff);
        }

        .header {
            height: 70px;
            background: linear-gradient(to right, #7f6cff, #c78bff);
            color: white;
            padding: 0 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
        }

            .header h3 {
                margin: 0;
                font-weight: 600;
            }

        .profile-dropdown {
            display: flex;
            align-items: center;
        }

            .profile-dropdown i {
                font-size: 1.5rem;
                margin-right: 10px;
            }

        .sidebar {
            position: fixed;
            top: 70px;
            left: 0;
            height: 100%;
            width: 230px;
            background: #6c4cf1;
            color: white;
            padding-top: 30px;
            z-index: 999;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 12px 20px;
                font-size: 1rem;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #8265ff;
                    border-left: 4px solid #fff;
                }

        .main-content {
            padding: 110px 30px 30px 30px; /* Adjust for header + sidebar */
        }

        .btn-logout {
            background: white;
            border: none;
            color: #6c4cf1;
            font-weight: 600;
            width: 90%;
            margin: 20px auto;
            display: block;
            border-radius: 30px;
            padding: 10px;
            transition: background-color 0.3s ease;
        }

            .btn-logout:hover {
                background-color: #eae2ff;
            }

        h2.section-title {
            font-weight: 700;
            color: #4b3fda;
            margin-bottom: 25px;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .offers-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
        }

        .offer-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 12px 30px rgba(108, 76, 241, 0.15);
            padding: 25px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .offer-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 40px rgba(108, 76, 241, 0.3);
            }

        .offer-title {
            font-size: 1.4rem;
            font-weight: 700;
            color: #6c4cf1;
            margin-bottom: 10px;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 1.2px;
        }

        .offer-discount {
            font-size: 2.8rem;
            font-weight: 800;
            color: #ff5e57;
            text-align: center;
            margin-bottom: 15px;
            letter-spacing: 1.5px;
        }

        .offer-dates {
            font-size: 0.9rem;
            color: #777;
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-offer-details {
            background-color: #6c4cf1;
            color: white;
            border: none;
            padding: 12px 0;
            border-radius: 40px;
            font-weight: 600;
            cursor: pointer;
            text-align: center;
            transition: background-color 0.3s ease;
            user-select: none;
        }

            .btn-offer-details:hover {
                background-color: #5740d9;
                text-decoration: none;
                color: white;
            }

        @@media (max-width: 768px) {
            body

        {
            padding-left: 0;
        }

        .sidebar {
            width: 100%;
            height: auto;
            position: relative;
        }

        .header {
            flex-direction: column;
            align-items: flex-start;
            height: auto;
            padding: 15px;
        }

        .main-content {
            margin-left: 0;
            padding-top: 140px;
        }

        }

        .btn-cute {
            padding: 10px 20px;
            font-size: 15px;
            border: none;
            border-radius: 30px;
            transition: all 0.3s ease;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
            text-decoration: none;
        }

        .btn-view {
            background-color: #A2D2FF;
            color: #03396c;
        }

            .btn-view:hover {
                background-color: #74c0fc;
                transform: scale(1.05);
            }

        .btn-edit {
            background-color: #FFC8DD;
            color: #6a0f49;
        }

            .btn-edit:hover {
                background-color: #fdaecb;
                transform: scale(1.05);
            }

        .btn-delete {
            background-color: #B5EAD7;
            color: #05676e;
        }

            .btn-delete:hover {
                background-color: #90e0d3;
                transform: scale(1.05);
            }

    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <h3>Admin Dashboard</h3>
        <div class="profile-dropdown">
            <i class="fas fa-user-circle"></i>
            @* <span>@username</span> *@
        </div>
    </div>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="@Url.Action("Index", "Admin")"><i class="fas fa-home me-2"></i>Dashboard</a>
        <a href="@Url.Action("Userdisplay", "Admin")"><i class="fas fa-users me-2"></i>Manage Users</a>
        <a href="@Url.Action("Index", "Products", new { area = "Admin" })"><i class="fas fa-box me-2"></i>Manage Products</a>
        <a href="@Url.Action("Index", "AdminOrder")"><i class="fas fa-shopping-cart me-2"></i>Orders</a>
        <a href="@Url.Action("MailInbox", "Admin")"><i class="fas fa-envelope me-2"></i>Inbox</a>
        <a href="@Url.Action("Profile", "Admin")"><i class="fas fa-user me-2"></i>Profile</a>
        <a asp-controller="AdminOffers" asp-action="Index" class="nav-link">Manage Offers</a>
        <a asp-controller="AdminOffers" asp-action="AssignOffer" class="nav-link">Assign Offers to Products</a>

        <form asp-controller="Manage" asp-action="Logout" method="post">
            <button class="btn-logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
        </form>
    </div>

    <div class="main-content">
        <h2 class="section-title">All Offers</h2>
        <div class="text-center mb-4">
            <a asp-action="Create" class="btn btn-primary btn-lg">Add New Offer</a>
        </div>

        <div class="offers-grid">
            @if (Model.Any())
            {
                foreach (var offer in Model)
                {
                    <div class="offer-card">
                        <div>
                            <div class="offer-title">@offer.Title</div>
                            <div class="offer-discount">@offer.DiscountPercentage % OFF</div>
                            <div class="offer-dates">
                                <strong>Start:</strong> @offer.StartDate<br />
                                <strong>End:</strong> @offer.EndDate
                            </div>
                        </div>
                        <!-- Button Row HTML -->
                        <div class="btn-row d-flex gap-2 justify-content-center mt-3">
                            <a asp-action="Details" asp-route-id="@offer.OfferId" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@offer.OfferId" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@offer.OfferId" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>

                           </div>
                        
                        </div>
                }
            }
            else
            {
                <p class="text-center text-muted">No offers available at the moment.</p>
            }
        </div>
    </div>
</body>
</html>
