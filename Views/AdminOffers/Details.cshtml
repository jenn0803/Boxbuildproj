@model Offer

@{
    ViewBag.Title = "Offer Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f0f4ff, #e8dfff);
            margin: 0;
            padding: 40px;
            color: #333;
        }

        .offer-container {
            max-width: 700px;
            margin: auto;
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 40px;
        }

        .offer-title {
            font-weight: 700;
            font-size: 2.8rem;
            color: #6c4cf1;
            margin-bottom: 20px;
            text-align: center;
        }

        .offer-info {
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        .discount-badge {
            display: inline-block;
            background: #6c4cf1;
            color: white;
            font-weight: 600;
            padding: 10px 25px;
            border-radius: 50px;
            font-size: 1.5rem;
            box-shadow: 0 5px 15px rgba(108, 76, 241, 0.4);
            margin: 20px auto;
            width: fit-content;
            text-align: center;
            user-select: none;
        }

        .dates {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
        }

        .date-box {
            background: #f1eaff;
            border-radius: 15px;
            padding: 15px 25px;
            width: 45%;
            text-align: center;
            color: #6c4cf1;
            font-weight: 600;
            box-shadow: 0 5px 10px rgba(108, 76, 241, 0.2);
        }

        .btn-back {
            margin-top: 30px;
            display: block;
            width: 100%;
            background: #6c4cf1;
            color: white;
            padding: 15px 0;
            border: none;
            border-radius: 30px;
            font-weight: 600;
            font-size: 1.2rem;
            cursor: pointer;
            transition: background 0.3s ease;
            text-align: center;
            text-decoration: none;
        }

            .btn-back:hover {
                background: #5847c6;
                text-decoration: none;
                color: white;
            }

        .description {
            margin-top: 25px;
            font-size: 1.1rem;
            line-height: 1.6;
            color: #555;
        }
    </style>
</head>
<body>

    <div class="offer-container">
        <h1 class="offer-title">@Model.Title</h1>

        <div class="discount-badge">
            @Model.DiscountPercentage % OFF
        </div>

        <div class="description">
            @if (!String.IsNullOrEmpty(Model.Description))
            {
                @Html.Raw(Model.Description)
            }
            else
            {
                <p>No description available for this offer.</p>
            }
        </div>

        <div class="dates">
            <div class="date-box">
                <i class="fas fa-calendar-check"></i>
                <p><strong>Start Date</strong></p>
                <p>@Model.StartDate.ToString("MMMM dd, yyyy")</p>
            </div>
            <div class="date-box">
                <i class="fas fa-calendar-times"></i>
                <p><strong>End Date</strong></p>
                <p>@Model.EndDate.ToString("MMMM dd, yyyy")</p>
            </div>
        </div>

        <a href="@Url.Action("Index", "AdminOffers")" class="btn-back">← Back to Offers</a>
    </div>

</body>
</html>
