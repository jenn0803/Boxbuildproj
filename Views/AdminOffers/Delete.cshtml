@model BoxBuildproj.Models.Offer
@{
    ViewData["Title"] = "Delete Offer";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #ffe4e4, #fff0f3);
        padding: 40px;
    }

    .card {
        max-width: 500px;
        margin: auto;
        border: none;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
        background: #ffffff;
    }

    .card-header {
        background: linear-gradient(90deg, #ff6b6b, #ff8787);
        color: white;
        border-radius: 16px 16px 0 0;
        padding: 1rem 1.5rem;
        text-align: center;
    }

    .btn-delete {
        background: #ff6b6b;
        color: white;
        padding: 0.6rem 2rem;
        border-radius: 50px;
    }

        .btn-delete:hover {
            background: #e55a5a;
        }

    .btn-cancel {
        color: #777;
        text-decoration: none;
        margin-left: 1rem;
    }
</style>

<div class="card">
    <div class="card-header">
        <h3>Delete Offer</h3>
    </div>
    <div class="card-body p-4 text-center">
        <p class="mb-4">Are you sure you want to delete this offer?</p>
        <p><strong>@Model.Title</strong> — <em>@Model.DiscountPercentage% OFF</em></p>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="OfferId" />
            <button type="submit" class="btn btn-delete">🗑️ Yes, Delete</button>
            <a asp-action="Index" class="btn-cancel">Cancel</a>
        </form>
    </div>
</div>
